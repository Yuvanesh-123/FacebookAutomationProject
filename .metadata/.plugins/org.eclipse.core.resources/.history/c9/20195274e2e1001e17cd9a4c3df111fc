package facebook;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.testng.Assert;
import org.testng.annotations.BeforeSuite;
import org.testng.annotations.Test;

public class loginPage {

	WebDriver driver;

	@BeforeSuite
	public void setUP() {
		driver = Helper.getDriver();

	}

	@Test
	public void TestToVerifyLoginPageLoaded() {
		driver.get("https://www.facebook.com/");
		String Page = driver.getTitle();
		Assert.assertEquals( Page, "Facebook ï¿½ log in or sign up");
		WebElement Confirm = driver.findElement(By.xpath("//div[@class='_8esl']/h2"));
		System.out.println(Confirm.getText());
		Assert.assertEquals(Confirm.getText(), "Facebook helps you connect and share with the people in your life.");
		
	}

}
