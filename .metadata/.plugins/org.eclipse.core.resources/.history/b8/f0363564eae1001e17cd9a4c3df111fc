package facebook;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.testng.Assert;
import org.testng.annotations.BeforeSuite;
import org.testng.annotations.Test;

public class loginPage {

	WebDriver driver;

	@BeforeSuite
	public void setUP() {
		driver = Helper.getDriver();

	}

	@Test
	public void TestToVerifyLoginPageLoaded() {
		driver.get("https://www.facebook.com/");
		String Page = driver.getTitle();
		boolean isLoginpage = Page.contains("log in or sign up");
		Assert.assertEquals( isLoginpage, true);
		WebElement welcomeText = driver.findElement(By.xpath("//div[@class='_8esl']/h2"));
		Assert.assertEquals(welcomeText.getText(), "Facebook helps you connect and share with the people in your life.");
		
	}
	
	@Test
	public void emailInputBoxIsEnable() {
		String attribute = driver.findElement(By.id("email")).getAttribute("aria-label");
		System.out.println(attribute);
	}
	
	
	
	
	
	

}
